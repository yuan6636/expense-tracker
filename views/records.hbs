<div class="mt-3 w-50 mx-auto">
  <select class="form-select form-select-lg" name="category" id="category">
    <option>類別</option>
    {{#each categories}}
      <option value="{{this.Id}}">{{this.name}}</option>
    {{/each}}
  </select>
  <div class="mt-5 d-flex justify-content-evenly">
    <div class="fw-bold fs-4">
      總金額：
    </div>
    <div class="text-danger" style="font-size: 100px;">25740</div>
  </div>

  <table class="table table-striped mt-2">
    {{#each records}}
      <tr class="align-middle">
        <td class="col-4">
          <div class="d-flex flex-row">
            <i class="fa-solid fa-house fs-2 mt-1"></i>
            <div class="d-flex flex-column ms-1 h-100">
              <span>{{this.name}}</span>
              <span style="font-size: 10px;">{{this.date}}</span>
            </div>
          </div>
        </td>
        <td class="col-4">{{this.amount}}</td>
        <td class="col-4">
          <a class="btn btn-primary me-2" href="">修改</a>
          <a class="btn btn-danger" href="">刪除</a>
        </td>
      </tr>
    {{/each}}
  </table>
  <div class="text-center mt-5">
    <a class="btn btn-primary" href="/records/create" style="width: 140px;">新增支出</a>
  </div>
</div>